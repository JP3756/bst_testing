@using bst_frontend.Services

<div class="tree-visualizer border rounded p-3">
    @if (Root == null)
    {
        <p class="text-muted">Tree visualization will appear here.</p>
    }
    else
    {
        <div class="tree-container">
            <TreeNode Node="Root" />
        </div>
    }
</div>

@code {
    [Parameter]
    public BstNodeModel? Root { get; set; }
}
